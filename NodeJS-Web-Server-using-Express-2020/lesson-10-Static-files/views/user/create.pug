extends ../layout/common
block content
  .container
    .row
      .col-5
        h1  Create user

        form(action="/users/create", method="post")
          .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name" value=value ? value.name : '')
          .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone" value=value ? value.phone : '')

            button.btn.btn-primary.mt-3 Create
        if errors
          each error in errors
            p.alert.alert-danger=error